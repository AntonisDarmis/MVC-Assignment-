@model UniversitySystemWeb.Models.Course
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "AssignCourse";
}

<h1>Assign course: @ViewBag.courseTitle to a professor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignCourse" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCourse" value="@ViewBag.courseId" />
            <div class="form-group">
                <label asp-for="CourseTitle" class="control-label"></label>
                <input type="text" asp-for="CourseTitle" class="form-control" />
                <span asp-validation-for="CourseTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseSemester" class="control-label"></label>
                <input type="number" min="0" max="8" asp-for="CourseSemester" class="form-control" />
                <span asp-validation-for="CourseSemester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessorsAfm" class="control-label"></label>
                <input type="text" asp-for="ProfessorsAfm" class="form-control" />
                <span asp-validation-for="ProfessorsAfm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" id="courseId" name="courseId" class="form-control" value="@ViewBag.courseId" />
                <input type="hidden" id="profAfm" name="profAfm" class="form-control" value="@ViewBag.profAfm" />
                <input type="hidden" id="semester" name="semester" class="form-control" value="@ViewBag.semester" />
                <input type="hidden" id="courseTitle" name="courseTitle" class="form-control" value="@ViewBag.courseTitle" />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
