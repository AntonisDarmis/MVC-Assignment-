@model IEnumerable<ViewModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "ViewCourses";
}

<h2>View information for all subjects </h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Course Title
            </th>
            <th>
                Course Semester
            </th>
            <th>
                Professor ID
            </th>
            <th>
                Assign to prof.
            </th>
            <th>
                Register student
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.semester)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.professorId)
                </td>
                <td>
                    @Html.ActionLink("Assign","AssignCourse","Secretaries",
                    new {courseId = item.courseId, profAfm = item.professorId, semester=item.semester, courseTitle = item.title})
                </td>
                <td>
                    @Html.ActionLink("Register","RegisterCourse","Secretaries",
                    new {courseId = item.courseId, courseTitle = item.title})
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

