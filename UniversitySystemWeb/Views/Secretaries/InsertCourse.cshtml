@model UniversitySystemWeb.Models.Course

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "InsertCourse";
}
<h4>Add a course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InsertCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCourse" class="control-label">Course ID</label>
                <input asp-for="IdCourse" class="form-control" />
                <span asp-validation-for="IdCourse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseTitle" class="control-label">Course Title</label>
                <input asp-for="CourseTitle" class="form-control" />
                <span asp-validation-for="CourseTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseSemester" class="control-label">Semester</label>
                <input asp-for="CourseSemester" class="form-control" />
                <span asp-validation-for="CourseSemester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessorsAfm" class="control-label">Professor AFM</label>
                <input type"number" asp-for="ProfessorsAfm" class="form-control" />
                <span asp-validation-for="ProfessorsAfm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" id="username" name="username" class="form-control" value="@ViewBag.username" />
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

